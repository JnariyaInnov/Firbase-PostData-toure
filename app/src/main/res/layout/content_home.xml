            <!--android:layout_width="100dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_marginRight="5dp"-->
            <!--android:layout_gravity="end|bottom"-->
            <!--android:src="@drawable/logobezzie"/>-->
    </LinearLayout>


</ScrollView>
